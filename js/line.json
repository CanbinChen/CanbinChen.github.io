{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/CanbinChen/CanbinChen.github.io/main/data/Region%20PM2.5.csv"
    },
    "vconcat": [
      {
        "width": 800,
        "height": 240,
        "mark": "area",
        "encoding": {
          "x": {
            "field": "total_year",
            "type": "temporal",
            "scale": {"domain": {"param": "seclection"}},
            "axis": {"title": ""},
            "timeUnit": "year"
            
          },
          "y": {"aggregate": "average", "field": "total_region", "type": "quantitative", "title": "average total region pollution"}
        }
      },
      {
        "width": 750,
        "height": 60,
        "mark": "line",
        "params": [
          {
            "name": "seclection",
            "select": {"type": "interval", "encodings": ["x"]}
          }
        ],
        "encoding": {
          "x": {"field": "total_year", "type": "temporal", "timeUnit": "year", "title": "Year"},
          "y": {
            "field": "total_region",
            "type": "quantitative",
            "title": "average total region pollution",
            "axis": {"tickCount": 3, "grid": false}
          }
        }
      }
    ]
  }
    
